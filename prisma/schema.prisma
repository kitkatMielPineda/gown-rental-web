generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  appointments Appointment[]
  rentals      Rental[]
}

model Rental {
  id          String   @id @default(uuid())
  userId      String
  name        String
  contact     String
  pickupDate  DateTime
  returnDate  DateTime
  gownDesc    String
  forRepair   Boolean  @default(false)
  repairDesc  String? 
  downPayment Decimal
  downPaymentMode  PaymentMode? // Radio
  finalPayment     Decimal?
  finalPaymentMode PaymentMode? // Radio
  totalAmount Decimal
  securityDeposit String?
  notes String?
  isPickedUp   Boolean @default(false)
  isReturned Boolean @default(false)  
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Appointment {
  id        String   @id @default(uuid())
  userId    String
  name      String
  contact   String
  date      DateTime
  time      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([date, time])
}

model Expense {
  id          String   @id @default(uuid())
  amount      Decimal
  paymentMode PaymentMode?
  description String
  createdAt   DateTime @default(now())
}

enum PaymentMode {
  GCASH
  Maya
  GoTyme
  BPI
  BDO
  UnionBank
  Metrobank
  Cash
}
